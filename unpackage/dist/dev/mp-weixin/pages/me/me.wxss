/* 水平间距 */
.bg {
  width: 100%;
  height: 100vh;
  font-size: 14px;
  line-height: 24px;
  background: linear-gradient(to bottom, #98e9ff, #F8F8F8);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 页面顶部圆弧背景 */
.head_top {
  width: 100%;
  height: 200px;
  background: #98ddff;
  border-bottom-left-radius: 60%;
  border-bottom-right-radius: 60%;
  position: fixed;
  z-index: 1;
}
.user_info {
  background-color: #fff;
  margin-top: 100rpx;
  width: 300rpx;
  height: 400rpx;
  border-radius: 10%;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.user_info .user_logo {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background-color: #fff;
}
.user_info .user_logo image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 2px solid #98ddff;
}
.user_info .user_name {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
  margin-bottom: 10px;
}
.user_info .award_box {
  height: 60px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 5px;
}
.user_info .award_box .award_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_info .award_box .award_item .award_text {
  font-size: 12px;
}
.user_info .award_box .award_item .award_num {
  font-size: 16px;
}
.user_info .award_box .award_item image {
  width: 30px;
  height: 30px;
}
.page_list {
  background-color: #fff;
  width: 700rpx;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  border-radius: 10px;
}
.page_list .page_item {
  width: 700rpx;
  height: 50px;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.page_list .page_item:last-child {
  border-bottom: none;
}
.page_list .page_item:first-child {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.page_list .page_item:last-child {
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.page_list .page_item text {
  font-size: 16px;
  margin-left: 20px;
}
.page_list .page_item .icon {
  margin-right: 10px;
  /* Adjust the margin as needed */
}